<% content_for :title, 'Create a group'%>
<div class="container main-wrapper">
  <%= render partial: 'layouts/errors', locals:{subject: @group}%>
  <div id="form-wrapper" class="col-sm-8 col-sm-offset-2">
    <%= form_for [@project,@group], class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.submit 'Create group', class: 'btn btn-default' %>
    </div>
    <%end%>
  </div>
</div>
