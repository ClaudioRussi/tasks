<% content_for :title, 'Your projects' %>

<div class="main-wrapper container">
  <h2>Projects created by you </h2>
  <div class="row">
    <%@projects.each do |project| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <div class="project-title">
            <h3><%=link_to project.name, project_path(project) %></h3>
          </div>
          <div class="project-description">
            <p><%=project.description %></p>
          </div>
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge"><%=project.tasks.count%></span>
              Tasks
            </li>
            <li class="list-group-item">
              <span class="badge"><%=project.collaborators.count%></span>
              Collaborators
            </li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <h2>Projects where you are collaborating </h2>
  <div class="row">
    <%@collaborating_projects.each do |project| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <div class="project-title">
            <h3><%=link_to project.name, project_path(project) %></h3>
            <div id="author-link">
              <p>Author: <%=link_to project.author.full_name, user_path(project.author)%> </p>
            </div>
          </div>

          <div class="project-description">
            <p><%=project.description %></p>
          </div>
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge"><%=project.tasks.count%></span>
              Tasks
            </li>
            <li class="list-group-item">
              <span class="badge"><%=project.collaborators.count%></span>
              Collaborators
            </li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div id="button-wrapper">
    <%=link_to 'Create new project', new_project_path, class: "btn-lg btn-success"%>
  </div>
</div>
